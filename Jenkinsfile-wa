
pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        sh 'mvn clean install'
        sh 'mvn clean package'
      }
    }

    stage('Test') {
      steps {
        sh 'mvn test'
      }
    }

    stage('Publishing JUnit Tests Report') {
      steps {
        junit 'target/surefire-reports/*.xml'
      }
    }

    stage('Publishing Code Coverage') {
      steps {
        jacoco()
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "1zee/ultimate-cicd:${BUILD_NUMBER}"
        # Update with the appropriate URL for your private registry if needed
        DOCKER_REGISTRY = 'https://index.docker.io/v1/'  # Public Docker Hub (change for private registry)
        DOCKER_USERNAME = credentials('docker-cred1').username
        DOCKER_PASSWORD = credentials('docker-cred1').password
      }
      steps {
        script {
          // Use docker login with credentials for secure authentication (recommended)
          sh "docker login -u ${DOCKER_USERNAME} -p ${DOCKER_PASSWORD} ${DOCKER_REGISTRY}"
          sh "docker build -t ${DOCKER_IMAGE} ."
          sh "docker push ${DOCKER_REGISTRY}${DOCKER_IMAGE}"  # Include registry URL in push command
        }
      }
    }
  }

  post {
    success {
      echo 'Pipeline successfully completed!'
    }
    failure {
      echo 'Pipeline failed.'
    }
  }
}
